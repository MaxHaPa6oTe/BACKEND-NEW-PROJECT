// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  createdAt  DateTime @default(now()) @map("created_at")

  name     String  @unique
  password String
}

model Worker {
  id         Int      @id @default(autoincrement())

  createdAt  DateTime
  otdel      String
  fio        String
  phone      String      @unique
  karta      String      @unique 
  photo      String   @default("default-avatar.png")

  dostyp     Dostyp[]
  otmetka    Otmetka[]
}

model Tyrniket {
  id         Int      @id @default(autoincrement())

  info       String   @unique

  dostyp     Dostyp[]
  otmetka    Otmetka[]
}

model Dostyp {
  id         Int      @id @default(autoincrement())
  
  worker     Worker   @relation(fields: [workerId], references: [id])
  workerId   Int
  tyrniket   Tyrniket @relation(fields: [tyrniketId], references: [id])
  tyrniketId Int
}

model Otmetka {
  id         Int      @id @default(autoincrement())
  
  createdAt  DateTime
  worker     Worker   @relation(fields: [workerId], references: [id])
  workerId   Int
  tyrniket   Tyrniket @relation(fields: [tyrniketId], references: [id])
  tyrniketId Int
}
